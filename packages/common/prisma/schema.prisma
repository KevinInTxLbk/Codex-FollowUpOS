generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageStatus {
  PENDING
  SENDING
  SENT
  FAILED
}

enum MessageChannel {
  SMS
  EMAIL
}

enum OutcomeStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum AttemptStatus {
  PENDING
  SUCCESS
  FAILED
}

enum AgentDecisionType {
  PRIORITIZE
  DEFER
  ESCALATE
  DISMISS
}

model Agency {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  clients   Client[]
  leads     Lead[]
  campaigns Campaign[]
  outcomes  Outcome[]
  agents    Agent[]

  @@index([name])
}

model User {
  id        String   @id @default(uuid())
  agencyId  String
  email     String   @unique
  name      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency    Agency   @relation(fields: [agencyId], references: [id])

  @@index([agencyId])
}

model Client {
  id        String   @id @default(uuid())
  agencyId  String
  name      String
  industry  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency    Agency   @relation(fields: [agencyId], references: [id])
  leads     Lead[]
  campaigns Campaign[]

  @@index([agencyId])
}

model Lead {
  id        String   @id @default(uuid())
  agencyId  String
  clientId  String
  fullName  String
  email     String?
  phone     String?
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency    Agency   @relation(fields: [agencyId], references: [id])
  client    Client   @relation(fields: [clientId], references: [id])
  messages  Message[]
  outcomes  Outcome[]

  @@index([agencyId])
  @@index([clientId])
}

model Campaign {
  id          String   @id @default(uuid())
  agencyId    String
  clientId    String
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  agency      Agency   @relation(fields: [agencyId], references: [id])
  client      Client   @relation(fields: [clientId], references: [id])
  messages    Message[]
  outcomes    Outcome[]

  @@index([agencyId])
  @@index([clientId])
}

model Outcome {
  id           String       @id @default(uuid())
  agencyId     String
  leadId       String
  campaignId   String
  name         String
  status       OutcomeStatus
  successRule  Json
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  agency       Agency       @relation(fields: [agencyId], references: [id])
  lead         Lead         @relation(fields: [leadId], references: [id])
  campaign     Campaign     @relation(fields: [campaignId], references: [id])
  attempts     OutcomeAttempt[]

  @@index([agencyId])
  @@index([leadId])
  @@index([campaignId])
}

model OutcomeAttempt {
  id         String       @id @default(uuid())
  outcomeId  String
  status     AttemptStatus
  details    Json
  createdAt  DateTime     @default(now())

  outcome    Outcome      @relation(fields: [outcomeId], references: [id])

  @@index([outcomeId])
}

model Message {
  id           String         @id @default(uuid())
  agencyId     String
  leadId       String
  campaignId   String
  channel      MessageChannel
  status       MessageStatus
  subject      String?
  body         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  sentAt       DateTime?

  agency       Agency         @relation(fields: [agencyId], references: [id])
  lead         Lead           @relation(fields: [leadId], references: [id])
  campaign     Campaign       @relation(fields: [campaignId], references: [id])
  attempts     MessageAttempt[]

  @@index([agencyId])
  @@index([leadId])
  @@index([campaignId])
}

model MessageAttempt {
  id             String       @id @default(uuid())
  messageId      String
  status         AttemptStatus
  provider       String
  providerMsgId  String?
  fromAddress    String?
  rawResponse    Json
  createdAt      DateTime     @default(now())

  message        Message      @relation(fields: [messageId], references: [id])

  @@index([messageId])
}

model Agent {
  id        String   @id @default(uuid())
  agencyId  String
  name      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency    Agency   @relation(fields: [agencyId], references: [id])
  logs      AgentDecisionLog[]

  @@index([agencyId])
}

model AgentDecisionLog {
  id          String            @id @default(uuid())
  agencyId    String
  agentId     String
  leadId      String
  campaignId  String
  decision    AgentDecisionType
  reasoning   String
  confidence  Float
  snapshot    Json
  createdAt   DateTime          @default(now())

  agency      Agency            @relation(fields: [agencyId], references: [id])
  agent       Agent             @relation(fields: [agentId], references: [id])
  lead        Lead              @relation(fields: [leadId], references: [id])
  campaign    Campaign          @relation(fields: [campaignId], references: [id])

  @@index([agencyId])
  @@index([agentId])
  @@index([leadId])
  @@index([campaignId])
}
